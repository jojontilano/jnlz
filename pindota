  <div class="click-text" onclick="startTyping()">ðŸ’— Click the letters to start ðŸ’—</div>
  <div class="hearts">ðŸ’ž ðŸ’• ðŸ’– ðŸ’— ðŸ’“</div>

  <script>
    const text = "halaaaa na hack mo acc.....charotttt syon tagayðŸ’•";
    const message = document.getElementById("message");
    let index = 0;
    let typing = false;

    function startTyping() {
      if (typing) return; 
      typing = true;
      const interval = setInterval(() => {
        if (index < text.length) {
          message.textContent += text[index];
          index++;
        } else {
          clearInterval(interval);
        }
      }, 150);
    }
  </script>
